<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:text="Ingresar Nueva Reservacion"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TableRow>
        <TextView android:text="id Reservacion:"/>
        <EditText
            android:id="@+id/idReservacion"
            android:inputType="text"
            android:maxLength="7" />
    </TableRow>
    <TableRow>
        <TextView android:text="Laboratorio:" />
        <Spinner
            android:id="@+id/cLaboratorio"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginTop="15dp" />
    </TableRow>
    <TableRow>
        <TextView android:text="Dia:" />
        <Spinner
            android:id="@+id/cDia"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginTop="15dp" />
    </TableRow>
    <TableRow>
        <TextView android:text="Hora:" />
        <Spinner
            android:id="@+id/cHora"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginTop="15dp" />
    </TableRow>
    <TableRow>
        <TextView android:text="Profesor:" />
        <Spinner
            android:id="@+id/cProfesor"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginTop="15dp" />
    </TableRow>
    <TableRow>
        <Button
            android:onClick="actualizarR"
            android:text="@string/actualizar" />

        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiar" />
    </TableRow>
</TableLayout>
